<!doctype html>
<html lang="en">

<head>
	<meta charset="utf8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-235377904-1"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'UA-235377904-1');
	</script>

	{% block head %}{% endblock head %}
	{% if light_mode %}
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.0/morph/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
	{% else %}
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.0/darkly/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
	{% endif %}
	<style>
		.text {
			color: var(--bs-body-color) !important;
		}
	</style>
</head>

<body>
	<br>
	<div id="content" class="container g-3">{% block content %}{% endblock content %}</div>
	<br><br><br><br><br>
	<nav class="navbar navbar-light bg-secondary fixed-bottom d-flex justify-content-around">
		<a class="nav-link p-0 text" href="/">Mods</a>
		{% if is_logged_in == true %}
		<a class="nav-link p-0 text" href="/liked">Liked Mods</a>
		<a class="nav-link p-0 text" href="/upload">Upload</a>
		<a class="nav-link p-0 text" href="/logout">Logout</a>
		{% else %}
		<a class="nav-link text"
			href="https://discord.com/api/oauth2/authorize?client_id=995951474959990824&redirect_uri=https%3A%2F%2Fdivamodarchive.xyz%2Flogin&response_type=code&scope=identify">Login</a>
		{% endif %}
		<a class="nav-link p-0 text" href="/theme">
			Switch theme
		</a>
		<a class="nav-link p-0 text" href="/about">About</a>
		{% if is_admin == true %}
		<a class="nav-link p-0 text" href="/admin">Admin</a>
		{% endif %}
	</nav>
</body>

</html>